/* currency Conventer theme by IWong v 0.0.1*/

background_color_1 = #f0efee
body_background = #2f3337
header_color = #f0efee
header_background = #36c2e0
footer_text_color = #fafafa
item_selected_bg = #232735
item_bg = #36c2e0
item_border = #cfdbe2
a_color = #fafafa
a_color_hovered = #232735

toUpper()
	text-transform uppercase

/*#####################*/
body
	background-color  body_background !important
	
section.content-wrapper
	height 95vh
	background-color background_color_1
	
footer
	color footer_text_color
	background-color body_background
	position relative

header
	background-color header_background
	width 100%

nav.custom
	background-color header_background
	
.appTitle
	toUpper()
	font-weight bold
	font-size 3em
	padding-top 10px
.homeLink
	font-size 3em
	color #f0efee
	
.container.content
	padding-top 95px
	
.cr-item
	.panel
		border none
		border-radius 0px
		box-shadow none !important
.item-name
	font-size 4em
	
.small-mark
	font-size 16px !important
	color item_bg
	vertical-align middle

.go-link
	font-size 24px
	font-weight bold
	background-color item_bg
	padding 10px
	a
		color a_color
		text-decoration none !important
		-webkit-transition all 0.5s ease
		-webkit-transition-delay 0.5s
		-moz-transition all 0.5s ease
		&:hover
			color a_color_hovered
			


form.conventer
	
	.input-group-addon i
			font-size 2em
		
	input[type='text']
			height 60px
			font-size 2em
			
			&:focus
				border-radius 0
				box-shadow none !important
		
	.form-control
			border-radius 0px !important

.result .result-icon
	font-size 3em

.result span.result-value
	font-size 3em
.result span.result-rate
	font-size 1em
	opacity 0.5